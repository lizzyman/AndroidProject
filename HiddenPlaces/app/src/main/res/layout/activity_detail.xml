<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naver.blog.hiddenplaces.DetailActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

<Button
    android:id="@+id/btn_location"
    android:layout_width="190dp"
    android:layout_height="wrap_content"
    android:background="@drawable/location"
    android:layout_weight="5"
    />

    <Button
        android:id="@+id/btn_region"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:background="@drawable/region"
        android:layout_weight="5"
        />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_region"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30dp"
        android:text="HyeHwa"
        />

    <TextView
        android:id="@+id/tv_strong_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_region"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:text="Strong Points"
        />

    <LinearLayout
        android:id="@+id/linear_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_strong_point"

        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Scenery"
            android:layout_marginLeft="20dp"
            android:textColor="#a1a5ad"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#entertainment"
            android:layout_marginLeft="10dp"
            android:textColor="#a1a5ad"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICS"
        app:layout_constraintTop_toBottomOf="@+id/linear_tags"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:textSize="30dp"
        android:textColor="#57e1f9"
        />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:background="@drawable/naksan"
        app:layout_constraintTop_toBottomOf="@+id/tv_pics"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_how"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to get there"
        app:layout_constraintTop_toBottomOf="@+id/iv_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/tv_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Transportation"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_how"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_vehi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Vehicle"
        android:textSize="19dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_trans"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
